{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2021",
        "lib": ["ES2021"],
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "noImplicitThis": true
    },
    "exclude": ["**/dist/**", "**/node_modules/**"]
}
